{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CBS (UCRT64 gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\cbs.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\msys64\\ucrt64\\bin\\gdb.exe",
      "preLaunchTask": "Build CBS",
      "environment": [
        {
          "name": "PATH",
          "value": "D:\\msys64\\ucrt64\\bin;D:\\msys64\\usr\\bin;${env:PATH}"
        }
      ],
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "text": "-gdb-set disassembly-flavor intel", "ignoreFailures": true }
      ]
    }
  ]
}
